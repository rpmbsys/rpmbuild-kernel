ARG centos=7.9.2009
# image comes from rpmbuild-libtool project
FROM aursu/rpmbuild:${centos}-build-gcc8

USER root
# EPEL is broken behind HTTPS
RUN sed -i '/metalink=/s/https/http/' /etc/yum.repos.d/epel.repo \
    && yum -y install \
        asciidoc \
        audit-libs-devel \
        binutils-devel \
        binutils-x86_64-linux-gnu \
        bpftool \
        elfutils-devel \
        gcc-x86_64-linux-gnu \
        gettext \
        glibc-static \
        hmaccalc \
        java-devel \
        libcap-devel \
        libcap-ng-devel \
        ncurses-devel \
        net-tools \
        newt-devel \
        numactl-devel \
        openssl \
        openssl-devel \
        pciutils-devel \
        perl-devel perl-generators "perl(ExtUtils::Embed)" \
        pesign \
        python3-devel python-devel python-docutils \
        xmlto \
        xz-devel \
        zlib-devel \
    && yum clean all && rm -rf /var/cache/yum

RUN yum -y --enablerepo bintray-custom install \
        dwarves \
        gcc-plugin-devel \
    && yum clean all && rm -rf /var/cache/yum